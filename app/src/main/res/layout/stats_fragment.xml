<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.FragmentStats">


    <ImageView
        android:id="@+id/imageViewtseries"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/tseries" />

    <ImageView
        android:id="@+id/imageViewpewdiepie"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/textViewtseries"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:src="@drawable/pewdipie" />

    <TextView
        android:id="@+id/textViewtseries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewtseries"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_border_2"
        android:padding="10dp"
        android:text="79186173"
        android:textAlignment="center"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textViewpewdiepie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewpewdiepie"
        android:layout_alignStart="@+id/textViewtseries"
        android:layout_alignLeft="@id/textViewtseries"
        android:background="@drawable/background_border_2"
        android:padding="10dp"
        android:text="79982510"
        android:textAlignment="center"
        android:textSize="32sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub_diff"
        android:layout_below="@id/textViewpewdiepie"
        android:text="796221"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_border_2"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_diff"
        android:text="Subscribers Difference"
        android:layout_centerHorizontal="true"
        android:textColor="@color/design_default_color_primary_dark"/>



</RelativeLayout>