<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"


    android:background="@drawable/background_border_2">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="8dp"
        android:id="@+id/imgIcon"
        app:srcCompat="@drawable/ic_portrait_black_24dp"/>

    <TextView
        android:id="@+id/txtTitle"
        android:textColor="#000000"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/imgIcon"
        android:layout_toRightOf="@id/imgIcon"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="@string/app_name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/anonymous"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:layout_below="@id/txtTitle"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/imgIcon"
        android:layout_toRightOf="@id/imgIcon"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textColor="@color/design_default_color_primary_dark"
        android:text="Anonymous" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/thums"
        android:layout_marginRight="5dp"
        android:background="#ffffff"
        android:layout_toEndOf="@id/txtTitle"
        android:layout_toRightOf="@id/txtTitle"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/thump_up"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likes"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/thums"
        android:layout_toEndOf="@id/thums"/>

</RelativeLayout>

</RelativeLayout>